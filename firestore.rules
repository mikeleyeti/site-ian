rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Collection des utilisateurs (données privées)
    // Chaque utilisateur peut uniquement lire et écrire ses propres données
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Collection de l'annuaire public
    // Lecture : tout utilisateur authentifié peut lire tous les profils publics
    // Écriture : seulement l'utilisateur peut modifier son propre profil
    match /public_directory/{userId} {
      allow read: if request.auth != null;  // Lecture pour tous les utilisateurs authentifiés
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Bloquer tout accès par défaut aux autres collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
