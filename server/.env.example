# Configuration MongoDB (à adapter avec vos informations OVH)
MONGODB_URI=mongodb://username:password@your-ovh-vps-ip:27017/ian-database
# Ou si vous utilisez MongoDB Atlas ou une autre solution
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ian-database

# Port du serveur
PORT=3000

# Secret pour JWT (générez une clé aléatoire sécurisée)
JWT_SECRET=votre_secret_jwt_tres_securise_a_changer

# Durée de validité du token JWT (en secondes)
JWT_EXPIRATION=86400

# Environnement
NODE_ENV=development
